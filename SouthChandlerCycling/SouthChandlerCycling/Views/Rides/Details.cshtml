@model SouthChandlerCycling.Models.Ride

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Ride</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RideName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RideName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Distance)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Distance)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Signups)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Rider</th>
                    <th>User Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Longitude</th>
                    <th>Latitude</th>
                </tr>
                @foreach (var item in Model.Signups)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualRider.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualRider.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualRider.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualRider.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualRider.LastLongitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualRider.LastLatitude)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
